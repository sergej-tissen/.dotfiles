" run in node-project: ln -s ~/dotfiles/.vimrc_local .vimrc
let g:syntastic_javascript_checkers = ['eslint'] "run eslint
map <leader>rns :wa <bar> :call VimuxRunCommand('clear && npm start')<cr>
map <leader>rnb :wa <bar> :call VimuxRunCommand('clear && npm run build')<cr>
map <leader>rnt :wa <bar> :call VimuxRunCommand('clear && npm test')<cr>
map <leader>rnl :wa <bar> :call VimuxRunCommand('clear && npm run lint')<cr>
map <leader>rnu :wa <bar> :call VimuxRunCommand('clear && npm run test:unit')<cr>
map <leader>rww :wa <bar> :call VimuxRunCommand('clear && npm run watch')<cr>
map <leader>rwu :wa <bar> :call VimuxRunCommand('clear && npm run watch:test:unit')<cr>
map <leader>rf :w <bar> :call VimuxRunCommand('clear && node ' .  bufname('%'))<cr>
map <leader>rwf :w <bar> :call VimuxRunCommand('clear && nodemon -q ' .  bufname('%'))<cr>
set path=**
set suffixesadd=.js,.html,.css,.json,.md,.apib
