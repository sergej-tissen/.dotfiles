" run in node-project: ln -s ~/dotfiles/.vimrc_local .vimrc
let g:syntastic_javascript_checkers = ['eslint'] "run eslint

autocmd BufLeave,FocusLost * silent! wall

map <leader>ir :w <bar> :call VimuxRunCommand('clear && node ' .  bufname('%'))<cr>
map <leader>iw :w <bar> :call VimuxRunCommand('clear && nodemon -q ' .  bufname('%'))<cr>
