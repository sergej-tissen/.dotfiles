set path=**
set suffixesadd=.js,.html,.css,.json
set nocompatible
set wildmode=full
set wildmenu
set number
set relativenumber
set nobackup
set nowritebackup
set noswapfile
set ignorecase
set smartcase
set incsearch
set nrformats=
set cursorline
highlight CursorLine cterm=none ctermbg=237
syntax on
filetype plugin on
" Automatic reloading of .vimrc
autocmd! bufwritepost .vimrc_minimal source %
